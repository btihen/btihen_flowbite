<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: resource.data.title %>
  </head>

  <body class="bg-yellow-50 <%= resource.data.layout %> <%= resource.data.page_class %>">

    <%= render Shared::Navbar.new(metadata: site.metadata, resource: resource) %>

    <!-- article -->
    <main>
      <div class="w-full">

        <section class="pt-12 relative">
          <div class="container mx-auto px-4">
            <div class="flex flex-wrap -mx-4">
              <div class="mx-auto relative w-full md:w-8/12">
                <h1 class="text-3xl font-bold leading-normal mt-0 mb-2"><%= resource.data.title %></h1>
                <h6 class="text-lg mt-2 mb-0 text-blueGray-400">Updated: <%= resource.data.updated.strftime('%F') %></h6>
                <article class="pt-1">
                  <%= yield %>
                </article>
              </div>
            </div>
          </div>
        </section>

      </div>
    </main>

    <%= render "footer", metadata: site.metadata %>
  </body>
</html>
